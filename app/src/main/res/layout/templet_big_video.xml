<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xing.playeractivity.SampleNoBottomVideo
        android:id="@+id/video_item_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.jaren.lib.view.FlowLikeView
        android:id="@+id/ll_right"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_follow_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_dig_count"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/asm"
            android:gravity="center_horizontal"
            android:text="跟拍"
            android:textColor="@color/anl_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dig_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_comment_count"
            android:layout_marginBottom="5dp"
            android:drawableTop="@mipmap/arv"
            android:layout_centerHorizontal="true"

            android:gravity="center_horizontal"
            android:text="139"
            android:textColor="@color/anl_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_share"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"
            android:drawableTop="@mipmap/ati"
            android:gravity="center_horizontal"
            android:text="8"
            android:textColor="@color/anl_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:drawableTop="@mipmap/ary"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="分享"
            android:textColor="@color/anl_white"
            android:textSize="14sp" />
    </com.jaren.lib.view.FlowLikeView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_toLeftOf="@+id/ll_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_user"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/anl_white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_comment"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/ll_right"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
          />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="123456789"
            android:textColor="@color/anl_white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_radio_red"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:paddingRight="6dp"
            android:paddingBottom="3dp"
            android:text="关注"
            android:textColor="@color/anl_white"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="55dp"
        android:layout_toLeftOf="@+id/ll_right"
        android:background="@drawable/bg_shape_radio_translucent"
        android:drawableLeft="@mipmap/as3"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="写评论"
        android:textColor="@color/anl_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/bx3" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/img_more"
            android:background="@mipmap/bh9" />

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/bvj" />
    </RelativeLayout>
</RelativeLayout>