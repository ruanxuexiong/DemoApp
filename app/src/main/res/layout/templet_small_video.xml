<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/anl_gray_aeaeae">

    <ImageView
        android:id="@+id/img_cover_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.xing.widget.RealtimeBlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        app:realtimeDownsampleFactor="5"
        app:realtimeOverlayColor="@color/anl_white_20_alpha" />

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_play_count"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="7dp"
        android:maxLines="2"
        android:text="@string/app_name"
        android:textColor="@color/anl_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@mipmap/b8v"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:text="@string/app_name"
        android:textColor="@color/anl_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_digg_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:text="@string/app_name"
        android:textColor="@color/anl_white"
        android:textSize="14sp" />

</RelativeLayout>