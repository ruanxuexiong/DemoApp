<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xing.widget.MultipleStatusView
        android:id="@+id/multipleStatusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/layout_empty_view"
        app:errorView="@layout/layout_error_view"
        app:loadingView="@layout/layout_loading_view"
        app:noNetworkView="@layout/layout_network_view">

        <com.xing.widget.ColorTrackTabLayout
            android:id="@+id/tab_channel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/anl_white"
            app:tabIndicatorColor="@color/anl_black"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/anl_black"
            app:tabTextAppearance="@style/TextAppearanceHome"
            app:tabTextColor="#ff222222" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_channel" />
    </com.xing.widget.MultipleStatusView>
</RelativeLayout>